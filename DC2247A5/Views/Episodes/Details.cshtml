@model DC2247A5.Models.EpisodeWithShowNameViewModel

@{
    ViewBag.Title = @Html.DisplayFor(model => model.ShowName);
}
@{
    var videoModel = new DC2247A5.Controllers.Manager().EpisodeVideoGetById(Model.Id);
}


<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShowName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShowName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EpisodeNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="Image" style="max-width: 150px; max-height: 150px;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clerk)
        </dd>

        @if (!string.IsNullOrWhiteSpace(Model.Premise))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Premise)
            </dt>
            <dd class="col-sm-10">
                <div class="card card-body bg-light">
                    @Html.Raw(Model.Premise)
                </div>
            </dd>
        }

        @if (!string.IsNullOrWhiteSpace(videoModel.VideoContentType))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VideoUrl)
            </dt>
            <dd class="col-sm-10">
                <div>
                    <video controls class="w-100">
                        <source src="@Url.Action("Video", "Episodes", new { id = Model.Id })" type="@videoModel.VideoContentType" />
                        Your browser does not support the video tag.
                    </video>
                </div>
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
